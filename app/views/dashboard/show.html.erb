<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POS Dashboard</title>
    <style>
        :root {
            --primary: #4a6cf7;
            --primary-dark: #3b57d9;
            --primary-light: #eef2ff;
            --secondary: #6c757d;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --bg: #f4f6fb;
            --card: #ffffff;
            --text-dark: #2d2d2d;
            --text-light: #6c757d;
            --radius: 14px;
            --shadow: 0 4px 10px rgba(0,0,0,0.08);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: var(--bg);
            font-family: "Segoe UI", -apple-system, BlinkMacSystemFont, sans-serif;
            line-height: 1.6;
            color: var(--text-dark);
        }

        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Welcome Animation Overlay */
        .welcome-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--primary);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            color: white;
            text-align: center;
            padding: 20px;
            opacity: 1;
            transition: opacity 0.8s ease;
        }

        .welcome-overlay.hidden {
            opacity: 0;
            pointer-events: none;
        }

        .welcome-logo {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 30px;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.8s forwards 0.3s;
        }

        .welcome-message {
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 15px;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.8s forwards 0.8s;
        }

        .shop-name {
            font-size: 1.4rem;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.8s forwards 1.5s;
            color: rgba(255, 255, 255, 0.9);
        }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Header */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .header h1 {
            color: var(--primary);
            font-size: 1.8rem;
            margin: 0;
        }

        .user {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            box-shadow: var(--shadow);
        }

        /* Quick Actions */
        .quick-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
            gap: 15px;
            margin-bottom: 30px;
        }

        .quick-btn {
            padding: 18px;
            background: var(--card);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            font-size: 1rem;
            font-weight: 600;
            text-align: center;
            color: var(--primary);
            text-decoration: none;
            transition: var(--transition);
            border: 2px solid transparent;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .quick-btn:hover {
            transform: translateY(-4px);
            border-color: var(--primary);
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        }

        .quick-btn i {
            font-size: 1.5rem;
        }

        /* Stats Section */
        .section {
            background: var(--card);
            padding: 20px;
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            margin-bottom: 25px;
        }

        .section h2 {
            margin: 0 0 15px 0;
            color: var(--text-dark);
            font-size: 1.3rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section h2 i {
            color: var(--primary);
        }

        .stats-boxes {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 15px;
        }

        .stat-card {
            background: var(--primary);
            color: white;
            padding: 20px;
            border-radius: var(--radius);
            text-align: center;
            box-shadow: var(--shadow);
            transition: var(--transition);
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-card h3 {
            margin: 0;
            font-size: 2rem;
            font-weight: bold;
        }

        .stat-card p {
            margin-top: 5px;
            font-size: 0.95rem;
            opacity: 0.9;
        }

        /* Recent Activity */
        .activity-list {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .activity-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
            border-radius: var(--radius);
            background: var(--primary-light);
            transition: var(--transition);
        }

        .activity-item:hover {
            background: #e0e7ff;
        }

        .activity-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .activity-details {
            flex: 1;
        }

        .activity-title {
            font-weight: 600;
            margin-bottom: 4px;
        }

        .activity-time {
            font-size: 0.85rem;
            color: var(--text-light);
        }

        .activity-amount {
            font-weight: 600;
            color: var(--primary);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .dashboard-container {
                padding: 15px;
            }
            
            .header {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .header h1 {
                font-size: 1.6rem;
            }
            
            .quick-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 12px;
            }
            
            .quick-btn {
                padding: 15px 10px;
                font-size: 0.9rem;
            }
            
            .quick-btn i {
                font-size: 1.3rem;
            }
            
            .section {
                padding: 15px;
            }
            
            .stats-boxes {
                grid-template-columns: 1fr;
                gap: 12px;
            }
            
            .stat-card {
                padding: 15px;
            }
            
            .stat-card h3 {
                font-size: 1.8rem;
            }
            
            .welcome-message {
                font-size: 1.5rem;
            }
            
            .shop-name {
                font-size: 1.2rem;
            }
        }

        @media (max-width: 480px) {
            .quick-grid {
                grid-template-columns: 1fr;
            }
            
            .welcome-logo {
                font-size: 1.6rem;
            }
            
            .welcome-message {
                font-size: 1.3rem;
            }
            
            .shop-name {
                font-size: 1.1rem;
            }
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

<!-- Welcome Animation Overlay -->
<div class="welcome-overlay" id="welcomeOverlay">
    <div class="welcome-logo">HAMZAX DEVELOPERS</div>
    <div class="welcome-message">Welcome to our POS System</div>
   <div class="shop-name" id="shopName">
  <span>Entering <%= Current.shop&.name || "Shop" %>!</span>
</div>

</div>

<div class="dashboard-container">

    <!-- Header -->
    <div class="header">
        <h1><i class="fas fa-chart-line"></i> POS Dashboard</h1>
        <div class="user">
            <div class="avatar">U</div>
            <span>Welcome, <%= Current.shop.name %>!</span>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-grid">
        <%= link_to "New Bill", new_sale_path, class: "quick-btn" %>
        <a href="/products" class="quick-btn">
            <i class="fas fa-box"></i>
            Products
        </a>
        <a href="sales" class="quick-btn">
            <i class="fas fa-shopping-cart"></i>
            Sales
        </a>
        <a href="#" class="quick-btn">
            <i class="fas fa-chart-bar"></i>
            Reports
        </a>
    </div>

    <!-- Stats Section -->
    <div class="section">
        <h2><i class="fas fa-chart-pie"></i> Quick Stats</h2>
        <div class="stats-boxes">
            <div class="stat-card">
                <h3><%= @products.count %></h3>
                <p>Total Products</p>
            </div>
            <div class="stat-card" style="background: var(--warning);">
                <h3><%= @low_stock_count %></h3>
                <p>Low Stock Items</p>
            </div>
            <div class="stat-card" style="background: var(--success);">
                <h3><%= @today_sales.count %></h3>
                <p>Bills Today</p>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="section">
  <h2><i class="fas fa-clock"></i> Recent Sales</h2>

  <div class="activity-list">
    <% @recent_sales.each do |sale| %>
      <div class="activity-item">
        
        <!-- Icon -->
        <div class="activity-icon">
          <i class="fas fa-receipt"></i>
        </div>

        <!-- Sale Details -->
        <div class="activity-details">
          <div class="activity-title">
            Sale #INV-<%= sale.id.to_s.rjust(5, "0") %>
          </div>
          <div class="activity-time">
            <%= time_ago_in_words(sale.created_at) %> ago
          </div>
        </div>

        <!-- Amount -->
        <div class="activity-amount">
          Rs. <%= number_with_delimiter(sale.total_cents / 100) %>
        </div>

      </div>
    <% end %>

    <% if @recent_sales.empty? %>
      <p style="text-align:center; color: gray;">No recent sales found.</p>
    <% end %>
  </div>
</div>


</div>
<script>
  var currentShopName = "<%= j(Current.shop.name) %>";
</script>

<script>
    // Welcome animation sequence
    document.addEventListener('DOMContentLoaded', function() {
        const welcomeOverlay = document.getElementById('welcomeOverlay');
        const shopName = document.getElementById('shopName');
        setTimeout(() => {
            welcomeOverlay.classList.add('hidden');
        }, 3000);
    });
</script>

</body>
</html>