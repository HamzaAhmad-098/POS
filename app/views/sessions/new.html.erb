# app/views/sessions/new.html.erb
<div class="login-container">
  <h2>POS System Login</h2>
  
  <% if flash[:alert] %>
    <div class="alert alert-error">
      <%= flash[:alert] %>
    </div>
  <% end %>
  
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>
  
  <%= form_with url: login_path, local: true do |form| %>
    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email, required: true, value: params[:email] %>
    </div>
    
    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password, required: true %>
    </div>
    
    <div class="actions">
      <%= form.submit "Login", class: "btn btn-primary" %>
    </div>
  <% end %>
  
  <div class="otp-section">
    <%= button_to "Login with OTP", otp_login_path, method: :get, class: "btn btn-secondary" %>
  </div>
</div>